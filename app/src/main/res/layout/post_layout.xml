<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:layout_marginBottom="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_linenar_layout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <ImageView
                android:id="@+id/user_pic_post"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/username_post"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="123"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#fb0f1ef6"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_post"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#020202"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postbody"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="59dp" />

        <ImageView
            android:id="@+id/moments_pic"
            android:layout_width="150dp"
            android:layout_height="73dp"
            android:visibility="visible"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/googleg_standard_color_18" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/post_linenar_layout_comments"
            android:orientation="vertical">
            <TextView
                android:id="@+id/no_use_comments_title"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/comment_list"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Yxy: 你气不气！" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:id="@+id/comment_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/buttonstyle_post"
            android:text="Comment"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:textSize="10sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


</LinearLayout>

