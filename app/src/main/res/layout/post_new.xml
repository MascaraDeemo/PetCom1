<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5_nouse"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_set_title"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_set_title"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:hint="Enter your title here"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:textColorHint="#18c8f0" />

    <TextView
        android:id="@+id/textView6_nouse"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <MultiAutoCompleteTextView
        android:id="@+id/post_set_item"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_set_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:gravity="left|bottom"
        android:hint="Enter your content here"
        android:textColorHint="#18c8f0" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7_nouse"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Set your Session period:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8_nouse"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Upload pic:(Optional)"
            android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/select_time"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="5 min" />

            <RadioButton
                android:id="@+id/ten"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="10 min" />

            <RadioButton
                android:id="@+id/thirty"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="30 min" />

            <RadioButton
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="1 hour" />

            <RadioButton
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours" />
        </RadioGroup>

        <ImageView
            android:id="@+id/post_new_add_img"
            android:layout_width="141dp"
            android:layout_height="137dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/picture" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/publish_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/add_pic"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonstyle"
            android:text="publish"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/add_pic"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/post_set_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonstyle"
            android:text="Add Pic"
            android:textColor="@android:color/white" />

    </LinearLayout>




</LinearLayout>