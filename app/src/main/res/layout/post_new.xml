<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5_nouse"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_set_title"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_set_title"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:hint="Enter your title here"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:textColorHint="#18c8f0" />

    <MultiAutoCompleteTextView
        android:id="@+id/post_set_item"
        android:layout_width="329dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_set_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:gravity="left|bottom"
        android:hint="Enter your content here"
        android:textColorHint="#18c8f0" />

</LinearLayout>